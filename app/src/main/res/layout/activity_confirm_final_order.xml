<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.buyers.ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="15dp"
        android:text="Please write your Shipment Details"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/confirm_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:hint="Your Name" />

    <EditText
        android:id="@+id/confirm_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_edit_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="Your Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/confirm_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_edit_email"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="Your Phone"
        android:inputType="number" />

    <EditText
        android:id="@+id/confirm_edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_edit_phone"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:hint="Your Address" />

    <EditText
        android:id="@+id/confirm_edit_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_edit_address"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:hint="Your City" />


    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>