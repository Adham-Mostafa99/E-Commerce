<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingHorizontal="12dp"
        android:paddingVertical="18dp">

        <TextView
            android:id="@+id/order_item_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Order Id:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/order_item_id_txt"
            android:text="Aug 20,202120:16:37 PM"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/order_item_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_id_txt"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_person" />

        <TextView
            android:id="@+id/order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_id_txt"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/order_item_time_icon"
            android:text="Adham Mostafa Dawey"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/order_item_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_name_icon"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_access_time" />

        <TextView
            android:id="@+id/order_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_name"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/order_item_time_icon"
            android:text="20:16:37 PM"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/order_item_date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/order_item_time"
            android:src="@drawable/ic_baseline_date" />

        <TextView
            android:id="@+id/order_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_name"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/order_item_date_icon"
            android:text="Aug 20,2021"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/order_item_address_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_time_icon"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_location" />

        <TextView
            android:id="@+id/order_item_address_lane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_time"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/order_item_address_icon"
            android:maxEms="15"
            android:maxLines="2"
            android:text="Egypt, cairo, nasrcity 1452 street nasrcity nasrcity nasrcity"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_address_lane"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/order_item_address_icon"
            android:text="Cairo"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/order_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_city"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/order_item_address_icon"
            android:text="011114256490"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/order_item_price_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/order_item_price"
            android:layout_alignBottom="@id/order_item_price"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_attach_money" />

        <TextView
            android:id="@+id/order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_phone"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/order_item_address_icon"
            android:text="1500 EG"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/order_again_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/order_item_phone"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="18dp"
            android:layout_toEndOf="@id/order_item_price"
            android:background="@drawable/buttons"
            android:text="Order Again"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>


