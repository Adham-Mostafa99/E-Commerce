<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/order_item_product_image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="18dp"
            android:scaleType="centerCrop"
            android:src="@drawable/product_placeholder" />

        <TextView
            android:id="@+id/order_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/order_item_product_image"
            android:text="Woman t- shirt"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/order_item_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_product_name"
            android:layout_toEndOf="@id/order_item_product_image"
            android:text="Lotto.LTD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_seller_name"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/order_item_product_image"
            android:text="500.0 EG"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_item_product_quantity"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:layout_below="@id/order_item_product_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/order_item_product_image"
            android:elevation="4dp"
            android:textColor="@color/borders"
            android:background="#F6F6F6"
            android:textSize="16sp"
            android:text="5"
            android:gravity="center"
          />




    </RelativeLayout>

</androidx.cardview.widget.CardView>