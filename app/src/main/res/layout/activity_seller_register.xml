<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.seller.SellerRegisterActivity">

    <ImageView
        android:id="@+id/seller_register_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/seller" />

    <TextView
        android:id="@+id/seller_register_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_register_img"
        android:layout_marginTop="30dp"
        android:text="Seller Registration Form"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/seller_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_register_txt"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:hint="Name..."
        android:inputType="text"
        android:paddingHorizontal="4dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/seller_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_register_name"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:paddingHorizontal="4dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/seller_register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_register_email"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:hint="Phone..."
        android:inputType="phone"
        android:paddingHorizontal="4dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/seller_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_register_phone"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:hint="Password..."
        android:inputType="textPassword"
        android:paddingHorizontal="4dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/seller_register_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_register_password"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:hint="Shop - Bussiness Address..."
        android:inputType="textMultiLine"
        android:paddingHorizontal="4dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/seller_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_register_address"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/seller_register_have_account_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_green_dark"
        android:text="Already have Account?"
        android:textAllCaps="false"
        android:textSize="18sp" />
</RelativeLayout>