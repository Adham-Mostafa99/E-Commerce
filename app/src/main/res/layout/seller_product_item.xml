<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="260dp"
    android:layout_margin="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_seller_product_card_1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/item_seller_product_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/product_placeholder" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/item_seller_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_seller_product_card_1"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="15.00 EG"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_seller_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_seller_product_price"
        android:fontFamily="sans-serif-light"
        android:maxEms="10"
        android:maxLines="1"
        android:text="Product Name"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_seller_product_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_seller_product_name"
        android:fontFamily="sans-serif-light"
        android:maxEms="10"
        android:maxLines="1"
        android:text="Approved"
        android:textAlignment="textStart"
        android:textColor="@color/seller"
        android:textSize="16sp" />

</RelativeLayout>
